@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>SignalR progress bar</h1>
    <p class="lead">This example show how to handle a long running task with signalR and display a progress bar.</p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Start a task</h2>

        <form class="form-horizontal" role="form" id="newTaskForm" data-bind="submit: startTask">
            <div class="form-group">
                <label for="delay" class="col-sm-2">Task Delay (milliseonds)</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="delay" placeholder="Task Delaiy in milliseconds" data-bind="value:model.taskDelay" />
                </div>                
            </div>
            <div class="form-group">
                <label for="css" class="col-sm-2">Bar appearance</label>
                <div class="col-sm-10">
                    <select id="css" class="form-control" data-bind="options: model.availableCss, value: model.selectedCss"></select>
                </div>                
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Start new Task</button>
                </div>
            </div>
        </form>

    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {            
            var controller = new TaskController();
            ko.applyBindings(controller, $('#newTaskForm').get(0));
        });
    </script>
}